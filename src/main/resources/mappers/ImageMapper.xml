<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.travel.withtrip.mapper.FeedMapper">

    <select id="findAllImages" resultType="boardImage">
        SELECT *
        FROM tbl_board_image
        WHERE board_id = #{boardId}
        ORDER BY order
    </select>

    <insert id="insertImage" parameterType="boardImage"
        useGeneratedKeys="true" keyProperty="imageId">
        INSERT INTO tbl_board_image
            (board_id, image_path, 'order')
        VALUES
            (#{boardId}, #{imagePath}, #{order})
    </insert>

    <delete id="deleteImage">
        DELETE tbl_board_image
        WHERE image_id = #{imageId}
    </delete>

</mapper>